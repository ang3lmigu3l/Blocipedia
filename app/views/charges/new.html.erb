<% if current_user.standard? %>
      <%= form_tag charges_path do %>
       <p>$15 Premium Membership</p><script class='stripe-button' src="https://checkout.stripe.com/checkout.js" data-email="<%= @stripe_btn_data[:email] %>" data-key="<%= @stripe_btn_data[:key] %>" data-amount=<%= @stripe_btn_data[:amount] %> data-description="<%= @stripe_btn_data[:description] %>" ></script>
      <% end %>

<% else %>
  <h4>You are currently a Premium Member of Blocipedia!</h4>
  <%= link_to 'Cancel Plan' , subscription_path, class: 'btn btn-default', method: 'delete' %>
<% end %>
